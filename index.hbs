    <meta property="og:image" content="https://marxjmoura.github.io/big-o/favicon.png"/>
    <meta property="og:description" content="Logic and programming proficiency test."/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/styles/tomorrow-night.min.css">
